# ============================================================================
# BETTER AUTH SIGNUP SYSTEM - Environment Configuration
# ============================================================================

# ----------------------------------------------------------------------------
# Application
# ----------------------------------------------------------------------------
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
BACKEND_PORT=3001

# ----------------------------------------------------------------------------
# Database (Neon Postgres with SSL)
# ----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@host.region.neon.tech/dbname?sslmode=require"

# ----------------------------------------------------------------------------
# Better Auth Configuration
# ----------------------------------------------------------------------------
BETTER_AUTH_SECRET="your-32-char-minimum-secret-key-here-change-in-production"
BETTER_AUTH_URL="http://localhost:3001"

# ----------------------------------------------------------------------------
# Email Service (SMTP)
# ----------------------------------------------------------------------------
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-app-specific-password"
EMAIL_FROM="noreply@yourdomain.com"

# ----------------------------------------------------------------------------
# OAuth Providers (Optional - for Social Authentication)
# ----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ----------------------------------------------------------------------------
# Session Configuration
# ----------------------------------------------------------------------------
SESSION_EXPIRY_SECONDS="604800"        # 7 days default
SESSION_REMEMBER_ME_EXPIRY="2592000"   # 30 days with remember me
SESSION_UPDATE_AGE="86400"             # Update session every 24 hours

# ----------------------------------------------------------------------------
# Rate Limiting
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS="900000"          # 15 minutes
RATE_LIMIT_MAX_REQUESTS="5"            # Max attempts per window
RATE_LIMIT_BLOCK_DURATION_MS="900000"  # Block for 15 minutes after limit

# ----------------------------------------------------------------------------
# Security
# ----------------------------------------------------------------------------
BCRYPT_COST_FACTOR="12"
JWT_SECRET="your-jwt-secret-key-for-token-signing"
ENCRYPTION_KEY="your-32-byte-hex-encryption-key"

# ----------------------------------------------------------------------------
# MFA Configuration
# ----------------------------------------------------------------------------
MFA_ISSUER="Humanoid Robotics Book"
MFA_BACKUP_CODES_COUNT="10"

# ----------------------------------------------------------------------------
# Frontend URL (for CORS and redirects)
# ----------------------------------------------------------------------------
FRONTEND_URL="http://localhost:3000"

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL="debug"

# ============================================================================
# LEGACY - OpenRouter/RAG Configuration (kept for backward compatibility)
# ============================================================================
OPENROUTER_API_KEY=""
QDRANT_URL=""
QDRANT_API_KEY=""
GEMINI_API_KEY=""
ENVIRONMENT="development"
DEBUG="false"
